<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3049"
    tools:context=".ui.Profile.UbahPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ubah_key2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/ic_baseline_lock_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ubah_key1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ubah_passlama"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:background="#414260"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Password Lama"
            android:textColor="#EDEEFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toEndOf="@+id/ubah_key1"
            app:layout_constraintTop_toBottomOf="@+id/ubah_sakatap" />

        <ImageView
            android:id="@+id/ubah_logo"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo_sakatap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ubah_sakatap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="116dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/sakatap"
            android:textColor="#FF953F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintStart_toEndOf="@+id/ubah_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ubah_ubah"
            android:layout_width="230dp"
            android:layout_height="53dp"
            android:layout_marginTop="48dp"
            android:text="Ubah Password"
            android:textColor="@color/black"
            app:backgroundTint="#FF953F"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ubah_passbaru" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ubah_passbaru"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:background="#414260"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Password Baru"
            android:textColor="#EDEEFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toEndOf="@+id/ubah_key2"
            app:layout_constraintTop_toBottomOf="@+id/ubah_passlama" />

        <ImageView
            android:id="@+id/ubah_key1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_baseline_lock_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ubah_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.appbar.AppBarLayout>