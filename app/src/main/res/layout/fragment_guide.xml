<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3049"
    tools:context=".ui.guide.GuideFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/guide_petunjuk"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Tap smartphone anda ke\nperangkat pasif SAKATap\ndan dapatkan souvenirnya"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_play_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/guide_next"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Selanjutnya"
        android:textColor="@color/black"
        app:backgroundTint="#FF953F"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_petunjuk" />

    <ImageButton
        android:id="@+id/guide_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@null"
        android:src="@drawable/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>