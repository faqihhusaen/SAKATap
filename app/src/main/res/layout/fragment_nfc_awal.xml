<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3049"
    tools:context=".ui.nfc.NfcAwalFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nfc_awal_keterangan2"
        android:layout_width="235dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:text="Tap smartphone anda ke\nperangkat pasif SAKATap\nuntuk memulai tur "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nfc_awal_keterangan1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nfc_awal_keterangan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Temukan\nPerangkat Pasif"
        android:clickable="true"
        android:textAlignment="center"
        android:textColor="#FF953F"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nfc_awal_logo" />

    <ImageView
        android:id="@+id/nfc_awal_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:src="@drawable/round_nfc_white_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>