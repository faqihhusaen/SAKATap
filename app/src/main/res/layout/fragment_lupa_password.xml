<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:layout_height="match_parent"
    android:background="#2E3049"
    tools:context=".ui.login.lupapasswordFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ketlupapassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:clickable="false"
            android:text="Lupa Password ?\n Silahkan masukkan email anda agar kami \ndapat mengirim link reset password"
            android:textAlignment="center"
            android:textColor="#EDEEFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lupa_sakatap" />

        <ImageView
            android:id="@+id/lupa_logo"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="136dp"
            android:src="@drawable/logo_sakatap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lupa_sakatap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="116dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/sakatap"
            android:textColor="#FF953F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/lupa_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lupa_kirim"
            android:layout_width="230dp"
            android:layout_height="53dp"
            android:layout_marginTop="64dp"
            android:text="Kirim"
            android:textColor="@color/black"
            app:backgroundTint="#FF953F"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lupa_email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lupa_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="44dp"
            android:background="#414260"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email"
            android:textColor="#EDEEFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/lupa_mail"
            app:layout_constraintTop_toBottomOf="@+id/ketlupapassword" />

        <TextView
            android:id="@+id/lupa_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:text="Sudah selesai ? Login"
            android:textColor="#EDEEFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lupa_kirim" />

        <ImageView
            android:id="@+id/lupa_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/ic_baseline_mail_outline_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ketlupapassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.appbar.AppBarLayout>